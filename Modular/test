return await _potentialMatchRecommendationRepository.GetItemAsync(
    x => x.Id == recommendationId
        && (
            (party.PlatformActivity == PlatformActivity.Borrower && x.Borrower.PartyPlatformId == party.PlatformId)
            || (party.PlatformActivity == PlatformActivity.Lender && x.Lender.PartyPlatformId == party.PlatformId)
            || (party.PlatformActivity == PlatformActivity.Conduit && 
                (x.Borrower.PartyPlatformId == party.PlatformId || x.Lender.PartyPlatformId == party.PlatformId))
        ),
    true);