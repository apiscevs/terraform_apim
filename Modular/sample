script {
  def context = 'scripts/Apim'
  def df      = 'Dockerfile-apply'
  finalImage = docker.build(
    "be/${project}:${env.BUILD_VERSION}",
    "-f ${context}/${df} --target ${project} " +
    "--build-arg BUILDKIT_INLINE_CACHE=1 " +
    "--build-arg ARTIFACTORY_NUGET=${env.ARTIFACTORY_NUGET} " +
    "${context}" // <<< build context MUST be last
  )
}
